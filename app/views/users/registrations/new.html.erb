<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Sign up</h2>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="field">
                <%= f.label "full name" %><br />
                <%= f.text_field :full_name, autofocus: true, autocomplete: "your full name ", class:"form-control" , placeholder: "John Smith ",  minlength: 5, maxlength: 50 ,required: true %>
            </div>


           <div class="mb-3">
                <%=f.label "Email:", class:"form-label"%>
                <%=f.email_field :email, class:"form-control" , placeholder: "john@email.com",required: true%>           
            </div>
            <div class="mb-3">
                <%= f.label :password %><br>
                <%= f.password_field :password, autocomplete: "new-password" , class:"form-control" , minlength: 5, maxlength: 50  ,required: true%>
                
            </div>
            <div class="mb-3">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control", required: true%>
                
            </div>
            <div class="d-grid gap-2">
                <%= f.submit "Sign Up", class:"btn btn-danger" %>
            </div>
          <% end %>
          
          <hr class="my-4">
          
          <div class="d-grid gap-2 text-center">
            

            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'btn btn-outline-primary',data: { turbo: false } do %>
              Log in with Google <%= image_tag 'googlemini_logo.svg', class: 'bi', size: '20x20' %>
            <% end %>

          </div> 
        </div>
      </div>
    </div>
  </div>
</div>