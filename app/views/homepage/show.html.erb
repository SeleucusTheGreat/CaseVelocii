
  <div class="container mt-5">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-center">User Profile</h3>
        <div class="row">
          <div class="col-md-4 text-center">
            <h5 class="">Profile picture:</h5>
            <% if @user.avatar.attached?  %>
              <%= image_tag @user.avatar, class: 'profile-avatar' , style: "width: 150px;  height: 150px; border-radius: 50%; object-fit: cover; " %>
            <%else%>
              <%= image_tag "logo.png", class: 'profile-avatar' , style: "width: 150px;  height: 150px; border-radius: 50%; object-fit: cover; " %>
            <% end %>
            
          </div>
          <div class="col-md-8">
            <table class="table table-borderless mt-6">
              <tbody>
               
                <tr>
                  <th scope="row">Full Name:</th>
                  <td><%= @user.full_name %></td>
                </tr>
                <tr>
                  <th scope="row">Email:</th>
                  <td><%= @user.email %></td>
                </tr>
                <tr>
                  <th scope="row">Address:</th>
                  <td>123 Main St, Anytown, USA</td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="text-center">
            <%= link_to 'Edit Profile', homepage_edit_path, class: 'btn btn-primary  ' %>
            <%= link_to 'Show me my Houses', mycards_path, class: 'btn btn-danger  ' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center mt-5 mb-5">
    <h2>Messages Incoming:</h2>
  </div>
  <div class="container">
  <div class="row">
    <% @user.received_messages.each do |message| %>
      <div class="col-md-12 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="row">
              
              <div class="col-md-2 text-center d-flex flex-column align-items-center">
                <p><strong>User:</strong></p>
                <% if message.sender.avatar.attached? %>
                  <%= image_tag message.sender.avatar, class: 'img-fluid rounded-circle', style: 'width: 80px; height: 80px; border-radius: 50%; object-fit: cover;' %>
                <% else %>
                  <%= image_tag 'logo.png', class: 'img-fluid rounded-circle', style: 'width: 80px; height: 80px; border-radius: 50%; object-fit: cover;' %>
                <% end %>
                <p><strong><%= message.sender.full_name %></strong></p>
              </div>
              
              <div class="col-md-8 bg-light">
                <p class="text-center fst-italic "><%= message.content %></p>
              </div>
              
              <div class="col-md-2 text-center d-flex flex-column align-items-center">
                <p><strong>House:</strong></p>
                <% if message.post.photos.attached? %>
                  <%= image_tag message.post.photos.first, class: 'img-fluid', style: 'width: 80px; height: 80px; border-radius: 50%; object-fit: cover;' %>
                <% else %>
                  <%= image_tag 'logo.png', class: 'img-fluid rounded-circle', style: 'width: 80px; height: 80px; border-radius: 50%; object-fit: cover;' %>
                <% end %>
                <p><strong><%= message.post.title %></strong></p>
              </div>
            </div>
          </div>
        </div>
        <p class="text-muted text-center"><small><%= time_ago_in_words(message.created_at) %> ago</small></p>
      </div>
    <% end %>
  </div>
</div>





