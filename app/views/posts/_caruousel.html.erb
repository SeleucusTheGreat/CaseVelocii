<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "appartment1.png", class: 'd-block ' , style: "width: 500px; height: 500px; ", alt: "First slide" %>
    </div>
    <div class="carousel-item">
      
      <%= image_tag "appartment2.png", class: 'd-block ' , style: "width: 500px; height: 500px; ", alt: "Second slide"%>
    </div>
    <div class="carousel-item">
      
      <%= image_tag "appartment3.png", class: 'd-block ' , style: "width: 500px; height: 500px; ", alt: "Third slide" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>